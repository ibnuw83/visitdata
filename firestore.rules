
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get user's role from the users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    // --- USERS ---
    match /users/{userId} {
      allow read;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    // --- DESTINATIONS ---
    match /destinations/{destinationId} {
      allow read;
      allow write: if isAdmin();
    }

    // --- CATEGORIES ---
    match /categories/{categoryId} {
      allow read;
      allow write: if isAdmin();
    }
    
    // --- COUNTRIES ---
    match /countries/{countryId} {
      allow read;
      allow write: if isAdmin();
    }

    // --- UNLOCK REQUESTS ---
    match /unlock-requests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Pengelola can create
      allow update: if isAdmin(); // Only admin can approve/reject
      allow delete: if isAdmin();
    }
    
    // --- APP SETTINGS ---
    match /settings/app {
        allow read;
        allow write: if isAdmin();
    }

    // --- VISIT DATA ---
    match /destinations/{destinationId}/visits/{visitId} {
      allow read;
      
      // Admin can write to anything.
      // Pengelola can write if the data is not locked.
      allow write: if isAdmin() || (isSignedIn() && getUserRole() == 'pengelola' && resource.data.locked == false);
    }
  }
}
