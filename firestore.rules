
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    function isPengelola() {
        return isSignedIn() && getUserData().role == 'pengelola';
    }

    // --- PUBLIC ACCESS ---
    // Anyone can read general app settings, destination lists, and categories.
    match /settings/app {
      allow read: if true;
      allow write: if isAdmin(); // Only admins can change settings
    }

    match /destinations/{destinationId} {
        allow read: if true;
        allow write: if isAdmin(); // Only admins can create/update/delete destinations
    }

    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /countries/{countryId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // --- VISIT DATA ACCESS ---
    // Collection group for visits. This allows public read for reports.
    match /{path=**}/visits/{visitId} {
        allow read: if true;

        // Write rules are more specific and defined on the direct path below
        allow write: if false; 
    }

    // Specific write rules for visits, checked against the destination document
    match /destinations/{destinationId}/visits/{visitId} {
        // A manager can write to a visit doc IF:
        // 1. They are a manager
        // 2. The destination is assigned to them
        // 3. The data is NOT locked
        allow write: if (isPengelola() && destinationId in getUserData().assignedLocations && resource.data.locked == false)
                     || isAdmin(); // Admins can always write/lock/unlock
    }


    // --- USER PROFILE ACCESS ---
    match /users/{userId} {
      // Admins can read any user profile.
      // A user can read their own profile.
      allow read: if isAdmin() || isUser(userId);

      // Admins can write to any user profile (to change roles, etc.).
      // A user can update their own profile (name, avatar, but not role).
      allow write: if isAdmin();
      allow update: if isUser(userId) && !(request.resource.data.role != resource.data.role);
    }
    
    // --- UNLOCK REQUESTS ACCESS ---
    match /unlock-requests/{requestId} {
        // Admins can see all requests
        allow read, list: if isAdmin();
        
        // Managers can create requests
        allow create: if isPengelola() && request.resource.data.requestedBy == request.auth.uid;
        
        // Admins can update status (approve/reject)
        allow update: if isAdmin();
        
        // No one can delete for auditing purposes
        allow delete: if false;
    }
  }
}

    