
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isAuthOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isAuth() && getRole(request.auth.uid) == 'admin';
    }

    function isPengelola() {
        return isAuth() && getRole(request.auth.uid) == 'pengelola';
    }

    // --- Collection Rules ---

    // Users can create their own user doc, admin can manage anyone.
    match /users/{userId} {
      allow read;
      allow create: if isAuthOwner(userId);
      allow update: if isAuthOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Data entry is managed by admins or pengelola.
    match /destinations/{destinationId}/visits/{visitId} {
      allow read;
      allow write: if isAdmin() || isPengelola();
    }
    
    // Core data collections are read-only for public, writable only by admins.
    match /destinations/{destinationId} {
        allow read;
        allow write: if isAdmin();
    }
    
    match /categories/{categoryId} {
        allow read;
        allow write: if isAdmin();
    }

    match /countries/{countryId} {
        allow read;
        allow write: if isAdmin();
    }
    
    // Unlock requests can be read by admins, created by pengelola.
    match /unlock-requests/{requestId} {
      allow read, update, delete: if isAdmin();
      allow create: if isPengelola();
    }

    // App settings can be read by anyone, but only written by admins.
    match /settings/app {
      allow read;
      allow write: if isAdmin();
    }
  }
}
